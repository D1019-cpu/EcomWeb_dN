@model JewelryShop.Models.EF.Promotion

@{
    ViewBag.Title = "Cập nhật khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/promotion" class="nav-link">Khuyến mãi</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật khuyến mãi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Khuyến mãi</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin khuyến mãi</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Promotion", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên khuyến mãi</label>
                        @Html.TextBoxFor(x => x.PromotionName, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x => x.PromotionName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">% Discount</label>
                        @Html.TextBoxFor(x => x.DiscountPercentage, new { @class = "form-control", @type = "number", @min = "1", @max = "100", @step = "0.01" })
                    </div>
                    

                    <div class="form-group">
                        <label for="exampleInputEmail1">Ngày bắt đầu áp dụng</label>
                        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @type="date" })
                    </div>

                    

                    <div class="form-group">
                        <label for="exampleInputEmail1">Ngày kết thúc khuyến mãi</label>
                        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @type = "date" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Kích hoạt</label>
                        @Html.CheckBoxFor(x => x.IsActive)
                    </div>

                    <div class="form-group">
                        <a href="/admin/promotion" class="btn btn-dark">Hủy</a>
                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    </div>
                </div>
            }


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
