@model PagedList.PagedList<JewelryShop.Models.EF.Category>
@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Danh mục</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="/admin/category/add" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteALl">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="SelectAll" />
                        </th>
                        <th>STT</th>
                        <th>Tên danh mục</th>
                        <th>Slug</th>
                        <th>Cập nhật</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        // var i = 1;
                        var i = (ViewBag.Page - 1) * ViewBag.PageSize + 1;
                        foreach(var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fa fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td>
                                    <input type="checkbox" class="cbkItem" value="@item.Id" />
                                </td>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Slug</td>
                                <td>@item.UpdatedAt</td>
                                <td>
                                    <a class="btnActive" href="#" data-id="@item.Id">
                                        @Html.Raw(strCheck)
                                    </a>
                                </td>
                                <td>
                                    <a href="/admin/category/edit/@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <button data-id="@item.Id" type="button" class="btn btn-danger btn-delete-category"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            i++;
                        }
                    } else
                    {
                        <tr>
                            <td colspan="5">Không có bản ghi nào trong cơ sở dữ liệu!</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btn-delete-category', function () {
                var id = $(this).data("id");
                var confirmAction = confirm("Bạn chắc chắn muốn xóa bản ghi này?");
                if (confirmAction === true) {
                    $.ajax({
                        url: '/admin/category/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (result) {
                            if (result.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            });




            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data("id");
                $.ajax({
                    url: '/admin/category/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.isActive) {
                            btn.html("<i class='fa fa-check text-success'></i>");
                        } else {
                            btn.html("<i class='fa fa-times text-danger'></i>");
                        }
                    }
                })
            });

        });
    </script>    
}